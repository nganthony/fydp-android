<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".BinListActivity">

    <!--
    This layout is a two-pane layout for the Bins
    master/detail flow.
    
    -->

    <fragment android:id="@+id/bin_list" android:name="com.uwaterloo.fydp.BinListFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

    <FrameLayout android:id="@+id/bin_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="2" />

</LinearLayout>
